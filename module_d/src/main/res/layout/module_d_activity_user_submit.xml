<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cn.neuwljs.module_d.view.impl.UserSubmitActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/module_d_activity_user_submit_tool_bar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/module_d_accent_color"/>
    <android.support.design.widget.TabLayout
        android:id="@+id/module_d_activity_user_submit_tab"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:tabMode="fixed"
        app:tabGravity="fill"
        app:tabIndicatorFullWidth="true"
        app:tabTextColor="#000000"
        app:tabSelectedTextColor="@color/module_d_accent_color"
        app:tabIndicatorColor="@color/module_d_accent_color"
        app:tabIndicatorHeight="2dp"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/module_d_activity_user_submit_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
