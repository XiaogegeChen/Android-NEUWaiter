<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="module_d_app_theme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/module_d_accent_color</item>
        <item name="colorPrimaryDark">@color/module_d_accent_color</item>
        <item name="colorAccent">@color/module_d_accent_color</item>

    </style>

    <!-- 默认圆角按钮样式 -->
    <style name="module_d_button_style" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:paddingLeft">@dimen/module_d_margin_left</item>
        <item name="android:paddingRight">@dimen/module_d_margin_right</item>
        <item name="android:textSize">@dimen/module_d_text</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/module_d_bg_button_selector</item>
        <item name="android:foreground">@null</item>
    </style>

    <style name="module_d_edit_style" parent="android:Widget.EditText">
        <item name="android:textCursorDrawable">@drawable/module_d_edit_cursor</item>
    </style>

    <style name="module_d_edit_theme" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">#8A8A8A</item>
        <item name="colorControlActivated">@color/module_d_accent_color</item>
    </style>

</resources>