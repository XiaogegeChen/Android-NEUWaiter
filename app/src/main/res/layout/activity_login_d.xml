<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context=".view.activity.LoginActivityD">
    <android.support.v7.widget.CardView
        android:id="@+id/activity_login_d_card_view"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:cardCornerRadius="@dimen/cornerRadius"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="true" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/fragment_d_login"
                android:textSize="@dimen/subTitle"
                android:textColor="@color/colorTextNormal"
                android:layout_margin="@dimen/componentSelfMargin"
                android:gravity="center"/>
            <com.neuwljs.wallsmalltwo.view.widget.custom.layout.EditListLayout
                android:id="@+id/activity_login_d_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:editIcon="@drawable/ic_account"
                app:hint="@string/fragment_d_accent_hint"
                app:inputType="textNumber"
                app:textColor="@color/colorTextNormal"
                />
            <com.neuwljs.wallsmalltwo.view.widget.custom.layout.EditListLayout
                android:id="@+id/activity_login_d_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:editIcon="@drawable/ic_password"
                app:hint="@string/fragment_d_password_hint"
                app:inputType="text"
                app:textColor="@color/colorTextNormal"
                />
            <TextView
                android:id="@+id/activity_login_d_forget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/fragment_d_forget"
                android:textSize="@dimen/text"
                android:textColor="@color/colorTextClickable"
                android:gravity="end"/>
            <Button
                android:id="@+id/activity_login_d_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/fragment_d_login_button"
                android:textSize="@dimen/subTitle"
                android:layout_margin="@dimen/componentSelfMargin"
                />
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/activity_login_d_fab"
        android:transitionName="fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_plus"
        android:layout_alignTop="@id/activity_login_d_card_view"
        android:layout_marginTop="24dp"
        android:layout_alignEnd="@id/activity_login_d_card_view"
        android:layout_marginEnd="-25dp"
        android:backgroundTint="@color/colorRegister"
        app:fabSize="normal"
        tools:targetApi="lollipop" />
</RelativeLayout>