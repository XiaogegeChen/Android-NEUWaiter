<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/componentSelfMargin"
    android:orientation="vertical"
    android:gravity="center">
    <FrameLayout
        android:id="@+id/fragment_d_b_a_student_card_layout"
        android:layout_width="@dimen/lostItemSize"
        android:layout_height="@dimen/lostItemSize"
        android:layout_margin="@dimen/componentSelfMargin"
        android:background="@drawable/bg_fragment_d_b_a_card_pre">
        <ImageView
            android:layout_gravity="center"
            android:layout_width="@dimen/fragmentDIconSize"
            android:layout_height="@dimen/fragmentDIconSize"
            android:src="@drawable/ic_success"/>
    </FrameLayout>
    <TextView
        android:id="@+id/fragment_d_b_d_serial_number_text"
        android:layout_margin="@dimen/componentSelfMargin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/fragment_d_b_d_thank"
        android:textColor="@color/colorTextNormal"
        android:textSize="@dimen/mainTitle"/>
    <TextView
        android:id="@+id/fragment_d_b_d_clickable_text"
        android:layout_margin="@dimen/componentSelfMargin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:text="@string/fragment_d_b_d_clickable"
        android:textColor="@color/colorTextNormal"
        android:textSize="@dimen/text"/>
</LinearLayout>