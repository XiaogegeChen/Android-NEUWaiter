<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/componentSelfMargin">
    <ProgressBar
        android:id="@+id/load_more_progress"
        android:layout_gravity="center_horizontal"
        android:layout_width="@dimen/fragmentDIconSize"
        android:layout_height="@dimen/fragmentDIconSize"
        android:layout_margin="@dimen/componentSelfMargin"/>
    <TextView
        android:id="@+id/load_more_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_gravity="center"
        android:layout_margin="@dimen/componentSelfMargin"
        android:textColor="@color/colorTextNormal"
        android:text="@string/load_error"/>
    <TextView
        android:id="@+id/load_more_done"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_gravity="center"
        android:layout_margin="@dimen/componentSelfMargin"
        android:textColor="@color/colorTextNormal"
        android:text="@string/load_done"/>
</FrameLayout>