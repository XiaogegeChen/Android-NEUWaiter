<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/widget_bg_dialog_ios_style"
    android:orientation="vertical"
    android:paddingTop="10dp" >
    <TextView
        android:id="@+id/widget_message_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/widget_text_normal_color"
        android:textSize="@dimen/widget_sub_title"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/widget_message_dialog_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/widget_margin_self"
        android:textColor="@color/widget_text_normal_color"
        android:textSize="@dimen/widget_text" />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/widget_dialog_line_size"
        android:layout_marginTop="@dimen/widget_margin_top"
        android:background="@color/widget_dialog_line" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/widget_message_dialog_cancel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="15dp"
            android:background="@drawable/widget_dialog_button_selector"
            android:focusable="true"
            android:gravity="center"
            android:textColor="@color/widget_dialog_cancel"
            android:textSize="@dimen/widget_text" />
        <View
            android:id="@+id/v_dialog_message_line"
            android:layout_width="@dimen/widget_dialog_line_size"
            android:layout_height="match_parent"
            android:background="@color/widget_dialog_line" />
        <TextView
            android:id="@+id/widget_message_dialog_confirm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="15dp"
            android:background="@drawable/widget_dialog_button_selector"
            android:focusable="true"
            android:gravity="center"
            android:textColor="@color/widget_dialog_confirm"
            android:textSize="@dimen/widget_text" />
    </LinearLayout>
</LinearLayout>