<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@color/widget_title_layout_bg">
    <ImageView
        android:id="@+id/widget_title_layout_left"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/widget_title_layout_left"
        android:layout_marginStart="16dp"
        android:layout_gravity="center_vertical"/>
    <TextView
        android:id="@+id/widget_title_layout_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:textSize="16sp"
        android:textColor="#ffffff"
        android:gravity="center"
        tools:text="我的"/>
    <ImageView
        android:id="@+id/widget_title_layout_right"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/widget_title_layout_right"
        android:layout_marginEnd="16dp"
        android:layout_gravity="center_vertical|end"/>
</FrameLayout>