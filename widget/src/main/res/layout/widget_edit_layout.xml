<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/widget_edit_layout_image_view"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_margin="16dp"
            tools:src="@drawable/widget_edit_layout_tools_share"/>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical" >
            <EditText
                android:id="@+id/widget_edit_layout_edit_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="14sp"
                android:background="@null"
                android:textCursorDrawable="@drawable/widget_edit_layout_bg_input_cursor"
                />
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>
    <View
        style="@style/Widget_HorizontalLineStyle" />
</LinearLayout>